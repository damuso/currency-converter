{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": ["NODE_ENV"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["^build", "db:generate"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"lint:fix": {
			"cache": false,
			"dependsOn": ["^build"]
		},
		"type-check": {
			"dependsOn": ["^build", "db:generate"],
			"outputs": []
		},
		"db:generate": {
			"cache": false,
			"outputs": ["node_modules/.prisma/**"]
		},
		"db:push": {
			"cache": false
		},
		"db:migrate": {
			"cache": false,
			"env": ["DATABASE_URL"]
		},
		"db:seed": {
			"cache": false,
			"dependsOn": ["db:generate"]
		}
	}
}
